<div class="col-lg-12">
		<div class="main-box">
			<div class="main-box-body clearfix">
			<div class="row">
				<div class="form-group col-xs-4">
					<label for="datepickerDate">{% trans %}Nombre{% endtrans %}</label>
					<div class="input-group">
						<input type="text" class="form-control" id="entries{{ cant }}" 
						value="{{ entries.name.vars.value }}"
						name="{{ entries.name.vars.full_name }}">
					</div>
				</div>
				<div class="form-group col-xs-4">
					<label for="datepickerDateRange">{% trans %}Cantidad de Cupos{% endtrans %}</label>
					<div class="input-group">
						<input type="text" class="form-control" id="datepickerDate" 
						value="{{ entries.cant.vars.value }}"
						name="{{ entries.cant.vars.full_name }}">
					</div>
				</div>
				<div class="form-group col-xs-4">
					<label for="datepickerDateRange">{% trans %}Precio{% endtrans %}</label>
					<div class="input-group">
						<input type="text" class="form-control" id="datepickerDate" 
						value="{{ entries.amount.vars.value }}"
						name="{{ entries.amount.vars.full_name }}">
					</div>
				</div>
				
				<div class="form-group col-xs-4">
					<label for="end">{% trans %}Desde{% endtrans %}</label>
					<div class="input-group" data-date-format="yyyy-mm-dd">
						<input type="text" class="form-control" id="{{ entries.start.vars.id }}" 
						name="{{ entries.start.vars.full_name }}" onclick="activeCalendar('{{ entries.start.vars.id }}')"
						value="{% if entries.start.vars.value %}{{ entries.start.vars.value|date('m/d/Y') }}{% endif %}">
						<span class="input-group-addon"><i class="fa fa-th"></i></span>
					</div>
				</div>
				
				<div class="form-group col-xs-4">
					<label for="end">{% trans %}Hasta{% endtrans %}</label>
					<div class="input-group" data-date-format="yyyy-mm-dd">
						<input type="text" class="form-control" id="{{ entries.end.vars.id }}" 
						name="{{ entries.end.vars.full_name }}" onclick="activeCalendar('{{ entries.end.vars.id }}')"
						value="{% if entries.end.vars.value %}{{ entries.end.vars.value|date('m/d/Y')  }}{% endif %}">
						<span class="input-group-addon"><i class="fa fa-th"></i></span>
					</div>
				</div>
				
			</div>
		</div>
	</div>
</div>

																											
<script type="text/javascript">
<!--
//nice select boxes

//-->
$('#{{ entries.start.vars.id }}').datepicker();
$('#{{ entries.end.vars.id }}').datepicker();

</script>








